<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.babygirl.mygarden">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_cacti"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PlantList"></activity>
        <activity android:name=".PlantDetails" />
        <activity android:name=".Snake" />
        <activity android:name=".Spider" />
        <activity android:name=".AloeVera" />
        <activity android:name=".Cactus" />
        <activity android:name=".PlantImages" />
        <activity android:name=".AddReminder" />
        <activity android:name=".AddPlant" />
        <activity android:name=".Info" />
        <activity android:name=".Reminders" />
        <activity android:name=".Garden" />
        <activity android:name=".Page2" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyNewIntentService"
            android:exported="false" />

        <receiver
            android:name=".MyReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>